				<one-of>
					<item><ruleref uri="#team" /><tag>out.team=rules.team</tag></item>
					<item><ruleref uri="#coloradj" /><tag>out.team=rules.coloradj</tag></item>
				</one-of>
				<ruleref uri="#playertype" /> <!-- player type -->
				<tag>out.pltype=rules.playertype</tag>
			</item>
			<!-- with "color" -->
			<item>
				<ruleref uri="#color" />
