				<tag>out.team=rules.color;out.pltype=rules.playertype</tag>
			</item>
			<!-- "color"s -->
			<item>
				<ruleref uri="#color" />
				ler
				<tag>out.team=rules.color</tag>
			</item>
		</one-of>
	</rule>
	
